{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "FundooNoteApp",
        "description": "This app is build for storing notes"
    },
    "host": "localhost:3000",
    "tags": [
        {
            "name": "FundooNotes",
            "description": "API for notes in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/registration": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Create a new note in the FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Note that we want to create"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Failed to create an new note"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "login to FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "login"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "logged in successfully"
                    },
                    "400": {
                        "description": "login failed"
                    }
                }
            }
        },
        "/forgotPassword": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Forgot Password",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "forgot password"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "sent mail successfully"
                    },
                    "400": {
                        "description": "unable to send mail"
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Reset Password in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "reset password"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "reset password successfully"
                    },
                    "400": {
                        "description": "failed to reset password"
                    }
                }
            }
        }
    }
}