{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "FundooNoteApp",
        "description": "This app is build for storing notes"
    },
    "host": "localhost:3000",
    "tags": [
        {
            "name": "FundooNotes",
            "description": "API for notes in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/registration": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Create a new note in the FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Note that we want to create"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Failed to create an new note"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "login to FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "login"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "logged in successfully"
                    },
                    "400": {
                        "description": "login failed"
                    }
                }
            }
        },
        "/forgotPassword": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Forgot Password",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "forgot password"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "sent mail successfully"
                    },
                    "400": {
                        "description": "unable to send mail"
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Reset Password in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "reset password"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "reset password successfully"
                    },
                    "400": {
                        "description": "failed to reset password"
                    }
                }
            }
        },
        "/notes": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Create notes in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "craete note"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "note created successfully"
                    },
                    "400": {
                        "description": "failed to create note"
                    }
                }
            },
            "get": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Get all notes from FundooNotes",
                "parameters": [
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "got all notes successfully"
                    },
                    "400": {
                        "description": "failed to get notes"
                    }
                }
            }
        },
        "/notes/{id}":{
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the person that we want to see",
                    "type":"string"
                }
            ],
            "put": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Update note in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "update an existing note"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "updated note successfully"
                    },
                    "400": {
                        "description": "failed to update note"
                    }
                }
            },
            "delete": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "delete note from FundooNotes and change the value of trash to true",
                "parameters": [
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "deleted note successfully"
                    },
                    "400": {
                        "description": "failed to delete notes"
                    }
                }
            }

        }
        
    }
}